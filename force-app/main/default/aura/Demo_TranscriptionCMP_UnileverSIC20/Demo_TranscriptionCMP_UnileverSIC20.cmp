                            <div class="mic-center" aura:id="mic" >
                                <img class="hideactive" src="https://www.dropbox.com/s/5pwyqhqvvlhk7ee/mic-button-off.png?raw=1"/>
                                <img class="showactive" src="https://www.dropbox.com/s/prigm8x17jokk4v/mic-button-on.png?raw=1"/>
